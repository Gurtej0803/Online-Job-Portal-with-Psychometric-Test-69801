@model JobPortal.Models.UpdateCategoryViewModel
@{
}
<h1>Edit Category</h1>
<form method="post" action="ViewCategory" class="mt-5">
    <input type="hidden" asp-for="CategoryId" />
    <div class="mb-3">
        <label for="" class="form-label">Category Name</label>
        <input type="text" class="form-control" asp-for="CategoryName">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

    <button type="submit" class="btn btn-danger"
            asp-action="DeleteCategory"
            asp-controller="TestQuestions">
        Delete
    </button>
</form>

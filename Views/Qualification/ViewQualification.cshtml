@model JobPortal.Models.UpdateQualificationViewModelcs
@{
}

<h1>Edit Qualification</h1>
<form method="post" action="ViewQualification" class="mt-5">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label for="" class="form-label">Institution Name</label>
        <input type="text" class="form-control" asp-for="InstitutionName">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Choose Correct Option</label>
        <select asp-for="LevelOfEducation" class="form-select" aria-label="Default select example">
            <option selected>--Choose Level of Education--</option>
            <option value="Pre-University">Pre-University</option>
            <option value="Diploma">Diploma</option>
            <option value="Bachelor's Degree">Bachelor's Degree</option>
            <option value="Master's Degree">Master's Degree</option>
            <option value="Doctorate">Doctorate</option>
            <option value="Certification">Certification</option>
        </select>
        </div>
        <div class="mb-3">
            <label for="" class="form-label">Major</label>
            <input type="text" class="form-control" asp-for="Major">
        </div>
        <div class="mb-3">
            <label for="" class="form-label">Start Date</label>
            <input type="date" class="form-control" asp-for="StartDate">
        </div>
        <div class="mb-3">
            <label for="" class="form-label">End Date</label>
            <input type="date" class="form-control" asp-for="EndDate">
        </div>
        <div class="mb-3">
            <label for="" class="form-label">CGPA</label>
            <input type="number" step="0.01" class="form-control" asp-for="GPA">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        
        <button type="submit" class="btn btn-danger"
                asp-action="DeleteQualification"
                asp-controller="Qualification">
            Delete
        </button>
        
</form>

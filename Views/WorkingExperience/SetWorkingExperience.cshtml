@model JobPortal.Models.SetWorkingExperienceViewModel
@{
}

<h1> Add New Working Experience</h1>
<form method="post" action="SetWorkingExperience" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label">Company Name</label>
        <input type="text" class="form-control" asp-for="CompanyName">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Job Title</label>
        <input type="text" class="form-control" asp-for="JobTitle">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Job Description</label>
        <input type="text" class="form-control" asp-for="JobDescription">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Job Field</label>
        <input type="text" class="form-control" asp-for="JobField">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Job Location</label>
        <input type="text" class="form-control" asp-for="JobLocation">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Start Date</label>
        <input type="date" class="form-control" asp-for="StartDate">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">End Date</label>
        <input type="date" class="form-control" asp-for="EndDate">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>